{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Code Conclave Verdict",
  "description": "Schema for the release readiness verdict",
  "type": "object",
  "required": ["project", "generated", "verdict", "summary", "agents"],
  "properties": {
    "project": {
      "type": "string",
      "description": "Project name"
    },
    "generated": {
      "type": "string",
      "description": "ISO 8601 datetime when report was generated",
      "format": "date-time"
    },
    "verdict": {
      "type": "string",
      "description": "Release verdict",
      "enum": ["SHIP", "CONDITIONAL", "HOLD"]
    },
    "summary": {
      "type": "object",
      "required": ["blockers", "high", "medium", "low", "total"],
      "properties": {
        "blockers": { "type": "integer", "minimum": 0 },
        "high": { "type": "integer", "minimum": 0 },
        "medium": { "type": "integer", "minimum": 0 },
        "low": { "type": "integer", "minimum": 0 },
        "total": { "type": "integer", "minimum": 0 }
      }
    },
    "agents": {
      "type": "object",
      "description": "Per-agent results",
      "patternProperties": {
        "^[a-z]+$": {
          "type": "object",
          "properties": {
            "status": {
              "type": "string",
              "enum": ["PASS", "WARN", "FAIL", "TIMEOUT", "ERROR", "SKIPPED"]
            },
            "blockers": { "type": "integer", "minimum": 0 },
            "high": { "type": "integer", "minimum": 0 },
            "medium": { "type": "integer", "minimum": 0 },
            "low": { "type": "integer", "minimum": 0 }
          }
        }
      }
    }
  }
}
